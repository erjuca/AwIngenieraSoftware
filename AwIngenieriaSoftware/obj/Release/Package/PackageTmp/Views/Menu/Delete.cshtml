@model AwIngenieriaSoftware.Models.Menu

@{
    ViewBag.Title = "Eliminar";
}
<div class="panel panel-info">
    <div class="panel panel-heading">
        <div class="btn-group float-right">
            <span>
                <a href="@Url.Action("Index")" class="btn btn-primary btn-sm ">
                    <span class="fas fa-arrow-left"></span>
                    Regresar a la lista
                </a>
            </span>
        </div>

        <h4><i class="fas fa-pencil-alt"></i> ¿Está seguro que desea eliminar este menú?</h4>

    </div>
    <div class="panel panel-body">
        <dl class="dl-horizontal" style="margin-bottom:80px">
            <dt>
                Menu Padre
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MenuPadre.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tipo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Controlador)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Controlador)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Accion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Accion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <p>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                </div>
            </p>
        }
    </div>
</div>
